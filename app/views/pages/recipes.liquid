---
{% extends 'generic' %}

{% block 'generic_body_content' %}

	<div class="recipe-row row">
		{% for recipe in contents.recipes %}
			<div class="small-12 columns large-4 medium-6">
				<div class="recipe">
					<img src='{{ recipe.image["url"] | resize: '500x400' }}' class="pull-left recipe-image" />
					<div class="recipe-content">
						<h1>{{ recipe.title }}</h1>
						<h4><span>{{ recipe.minutes }}</span> min, <span>{{ recipe.ingredients }}</span> ingredients </h4>
						<p>{{ recipe.description }}</p>
						<div class="pull-left">
							<p class="my-recipes"><img src="{{ 'my_recipes.png' | theme_image_url }}"> My Recipes </p>
						</div>
						<div class="pull-right recipe-rating">
							{% assign reverse =   5 | minus: recipe.rating  %}
							{% for i in (1..5) %}
								{% if reverse >= i %}
									<img src="{{ 'empty_star.png' | theme_image_url }}" />
								{% else %}
									<img src="{{ 'filled_star.png' | theme_image_url }}" />
								{% endif %}
							{% endfor %}
						</div>
						<hr>
						<div class="pull-left">
							<p> Social stuff </p>
						</div>
						<div class="pull-right">
							<p> Number </p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{%endblock%}